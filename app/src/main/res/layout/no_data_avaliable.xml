<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/no_data_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/no_data_available"/>
    <TextView
        android:id="@+id/no_data_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        android:text="@string/something_went_wrong"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/no_data_image"/>
    <TextView
        android:id="@+id/no_data_txt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:text="@string/check_permission_grantee_n_check_location_status_n_check_internet_connection"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/no_data_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>